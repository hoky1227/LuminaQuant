# Exchange API keys
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Notification
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Real trading safety gate (required when live.mode=real)
LUMINA_ENABLE_LIVE_REAL=false

# Config path override (optional)
# LQ_CONFIG_PATH=config.yaml

# Generic nested overrides use LQ__SECTION__KEY=value
# System
LQ__SYSTEM__LOG_LEVEL=INFO

# Trading
LQ__TRADING__SYMBOLS=["BTC/USDT"]
LQ__TRADING__TIMEFRAME=1m
LQ__TRADING__INITIAL_CAPITAL=10000
LQ__TRADING__TARGET_ALLOCATION=0.1
LQ__TRADING__MIN_TRADE_QTY=0.001

# Risk
LQ__RISK__RISK_PER_TRADE=0.005
LQ__RISK__MAX_DAILY_LOSS_PCT=0.03
LQ__RISK__MAX_TOTAL_MARGIN_PCT=0.50
LQ__RISK__MAX_SYMBOL_EXPOSURE_PCT=0.25
LQ__RISK__MAX_ORDER_VALUE=5000
LQ__RISK__DEFAULT_STOP_LOSS_PCT=0.01

# Execution
LQ__EXECUTION__MAKER_FEE_RATE=0.0002
LQ__EXECUTION__TAKER_FEE_RATE=0.0004
LQ__EXECUTION__SPREAD_RATE=0.0002
LQ__EXECUTION__SLIPPAGE_RATE=0.0005
LQ__EXECUTION__FUNDING_RATE_PER_8H=0.0
LQ__EXECUTION__FUNDING_INTERVAL_HOURS=8
LQ__EXECUTION__MAINTENANCE_MARGIN_RATE=0.005
LQ__EXECUTION__LIQUIDATION_BUFFER_RATE=0.0005
# CPU only backend
LQ__EXECUTION__COMPUTE_BACKEND=cpu

# Storage
LQ__STORAGE__BACKEND=sqlite
LQ__STORAGE__SQLITE_PATH=logs/lumina_quant.db
LQ__STORAGE__EXPORT_CSV=true

# Backtest
LQ__BACKTEST__START_DATE=2024-01-01
LQ__BACKTEST__END_DATE=
LQ__BACKTEST__COMMISSION_RATE=0.001
LQ__BACKTEST__SLIPPAGE_RATE=0.0005
LQ__BACKTEST__ANNUAL_PERIODS=252
LQ__BACKTEST__RANDOM_SEED=42
LQ__BACKTEST__PERSIST_OUTPUT=true
LQ__BACKTEST__LEVERAGE=3

# Live
LQ__LIVE__MODE=paper
LQ__LIVE__REQUIRE_REAL_ENABLE_FLAG=true
LQ__LIVE__POLL_INTERVAL=2
LQ__LIVE__ORDER_TIMEOUT=10
LQ__LIVE__HEARTBEAT_INTERVAL_SEC=30
LQ__LIVE__RECONCILIATION_INTERVAL_SEC=30
LQ__LIVE__EXCHANGE__DRIVER=ccxt
LQ__LIVE__EXCHANGE__NAME=binance
LQ__LIVE__EXCHANGE__MARKET_TYPE=future
LQ__LIVE__EXCHANGE__POSITION_MODE=HEDGE
LQ__LIVE__EXCHANGE__MARGIN_MODE=isolated
LQ__LIVE__EXCHANGE__LEVERAGE=3

# Optimization
LQ__OPTIMIZATION__METHOD=OPTUNA
LQ__OPTIMIZATION__STRATEGY=RsiStrategy
LQ__OPTIMIZATION__WALK_FORWARD_FOLDS=3
LQ__OPTIMIZATION__OVERFIT_PENALTY=0.5
LQ__OPTIMIZATION__MAX_WORKERS=4
LQ__OPTIMIZATION__PERSIST_BEST_PARAMS=false
